<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="kim_kardashian">

  <material name="grey"><color rgba="0.5 0.5 0.5 1"/></material>
  <material name="blue"><color rgba="0 0 0.8 1"/></material>
  <material name="red"><color rgba="0.8 0 0 1"/></material>
  <material name="yellow"><color rgba="1 1 0 1"/></material>
  <material name="green"><color rgba="0 0.8 0 1"/></material>

  <link name="base_link">
    <visual>
      <geometry><box size="0.05 0.3 0.02"/></geometry>
      <material name="green"/>
    </visual>
  </link>

  <link name="x_rail_assembly">
    <visual>
      <geometry><box size="0.3 0.05 0.02"/></geometry>
      <material name="blue"/>
    </visual>
  </link>

  <joint name="y_axis_joint" type="prismatic">
    <parent link="base_link"/>
    <child link="x_rail_assembly"/>
    <origin xyz="0 0 0.02" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.12" upper="0.12" effort="100" velocity="1.0"/>
  </joint>

  <link name="x_slider">
    <visual>
      <geometry><box size="0.06 0.06 0.02"/></geometry>
      <material name="blue"/>
    </visual>
  </link>

  <joint name="x_axis_joint" type="prismatic">
    <parent link="x_rail_assembly"/>
    <child link="x_slider"/>
    <origin xyz="0 0 0.02" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-0.12" upper="0.12" effort="100" velocity="1.0"/>
  </joint>

  <link name="vertical_arm">
    <visual>
      <origin xyz="0 0 0.05" rpy="0 0 0"/> 
      <geometry><box size="0.03 0.03 0.1"/></geometry>
      <material name="yellow"/>
    </visual>
  </link>

  <joint name="arm_to_x_joint" type="fixed">
    <parent link="x_slider"/>
    <child link="vertical_arm"/>
    <origin xyz="0 0 0.01" rpy="0 0 0"/>
  </joint>

  <link name="gripper_body">
    <visual>
      <geometry><box size="0.04 0.04 0.04"/></geometry>
      <material name="red"/>
    </visual>
  </link>

  <joint name="z_axis_lift_joint" type="prismatic">
    <parent link="vertical_arm"/>
    <child link="gripper_body"/>
    <origin xyz="0 0.04 0.05" rpy="0 0 0"/> 
    <axis xyz="0 0 1"/> 
    <limit lower="-0.04" upper="0.04" effort="100" velocity="1.0"/>
  </joint>

  <link name="finger_left">
    <visual>
      <geometry><box size="0.01 0.04 0.01"/></geometry>
      <material name="grey"/>
    </visual>
  </link>

  <joint name="finger_joint_left" type="prismatic">
    <parent link="gripper_body"/>
    <child link="finger_left"/>
    <origin xyz="-0.02 0.04 0" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-0.01" upper="0.01" effort="10" velocity="1.0"/>
  </joint>

  <link name="finger_right">
    <visual>
      <geometry><box size="0.01 0.04 0.01"/></geometry>
      <material name="grey"/>
    </visual>
  </link>

  <joint name="finger_joint_right" type="prismatic">
    <parent link="gripper_body"/>
    <child link="finger_right"/>
    <origin xyz="0.02 0.04 0" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-0.01" upper="0.01" effort="10" velocity="1.0"/>
    <mimic joint="finger_joint_left" multiplier="-1.0"/>
  </joint>
  
</robot>