<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="kim_kardashian">

  <material name="grey"><color rgba="0.5 0.5 0.5 1"/></material>
  <material name="blue"><color rgba="0 0 0.8 1"/></material>
  <material name="red"><color rgba="0.8 0 0 1"/></material>
  <material name="yellow"><color rgba="1 1 0 1"/></material>

  <link name="base_link">
    <visual>
      <geometry><box size="2.0 0.05 0.05"/></geometry>
      <material name="grey"/>
    </visual>
  </link>

  <link name="sliding_module">
    <visual>
      <geometry><box size="0.15 0.15 0.06"/></geometry>
      <material name="blue"/>
    </visual>
  </link>

  <joint name="x_axis_joint" type="prismatic">
    <parent link="base_link"/>
    <child link="sliding_module"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-0.9" upper="0.9" effort="100" velocity="1.0"/>
  </joint>

  <link name="vertical_arm">
    <visual>
      <origin xyz="0 0 0.2" rpy="0 0 0"/> <geometry><box size="0.04 0.04 0.4"/></geometry>
      <material name="yellow"/>
    </visual>
  </link>

  <joint name="z_axis_joint" type="prismatic">
    <parent link="sliding_module"/>
    <child link="vertical_arm"/>
    <origin rpy="0 0 0" xyz="0 0 0.03"/>
    <axis xyz="0 0 1"/>
    <limit effort="100" lower="0.0" upper="0.4" velocity="1.0"/>
  </joint>

  <link name="gripper_body">
    <visual>
      <geometry><box size="0.05 0.1 0.05"/></geometry>
      <material name="red"/>
    </visual>
  </link>

  <joint name="y_axis_forward_joint" type="prismatic">
    <parent link="vertical_arm"/>
    <child link="gripper_body"/>
    <origin xyz="0 0.05 0.35" rpy="0 0 0"/> 
    <axis xyz="0 1 0"/>
    <limit lower="0.0" upper="0.2" effort="100" velocity="1.0"/>
  </joint>

  <link name="finger_left">
    <visual>
      <geometry><box size="0.01 0.05 0.02"/></geometry>
      <material name="grey"/>
    </visual>
  </link>

  <joint name="finger_joint" type="prismatic">
    <parent link="gripper_body"/>
    <child link="finger_left"/>
    <origin xyz="-0.02 0.1 0" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="0" upper="0.02" effort="10" velocity="1.0"/>
  </joint>

</robot>